<UserControl x:Class="MonitoringClient.View.LogEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonitoringClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <GroupBox Header="Navigation" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtblock_connection"
                           Grid.Row="0" Text="Server Connection String: "
                           Width="150"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="txtbox_connectionString"
                         Text="{Binding Path=ConnectionString}"
                         HorizontalAlignment="Left"
                         Grid.Row="0"
                         Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Width="500"
                         Height="20"/>
                <Button x:Name="button_load"
                        Command="{Binding Path=LoadButtonCommand}"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Load"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Width="70" Height="20" Margin="0,14.8"/>
                <Button x:Name="button_confirm"
                        Command="{Binding Path=ConfirmButtonCommand}"
                        CommandParameter="{Binding ElementName=logentrie_dataGrid, Path=SelectedItems}"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Confirm"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="70" Margin="82,14.8,0,14.8" Height="20" />
                <Button x:Name="button_add"
                        Command="{Binding Path=NavigateLogMessageAddView}"
                        Grid.Row="1"
                        Grid.Column="1"
                        Content="Add"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="70" RenderTransformOrigin="0.5,0.5" Margin="0,14.8,425.2,14.8" Height="20" />
                <Button x:Name="button_findDuplicates"
                        Command="{Binding Path=FindDuplicatesButtonCommand}"
                        Grid.Row="1"
                        Grid.Column="1"
                        Content="Find Duplicates"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="140" Margin="93.2,14.8,273.2,14.8" Height="20" />
                <Button x:Name="button_locationView"
                        Command="{Binding Path=NavigateLocationView}"
                        Grid.Column="1"
                        Content="LocationView"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="83" Margin="417,4.8,3.2,4.8" Height="40" Grid.Row="1" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Data" Grid.Row="1">
            <DataGrid x:Name="logentrie_dataGrid"
                      IsReadOnly="true"
                      ItemsSource="{Binding Path=Logentries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
                      HorizontalAlignment="stretch"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="auto"
                      Height="200"/>
        </GroupBox>
    </Grid>
</UserControl>
