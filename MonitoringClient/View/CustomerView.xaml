<UserControl x:Class="MonitoringClient.View.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="400" />
        </Grid.RowDefinitions>
        <GroupBox Header="Customer Navigation" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="button_back"
                        Command="{Binding Path=NavigateBack}"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Back"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Width="70" Height="20" Margin="0,14.8"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="CustomerData" Grid.Row="1" Margin="0,0,0,60">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="logentrie_dataGrid2"
                          IsReadOnly="true"
                          ItemsSource="{Binding Path=Logentries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
                          HorizontalAlignment="stretch"
                          Grid.Row="0"
                          VerticalScrollBarVisibility="auto" Margin="0,0,-599,0"/>
                <TextBlock x:Name="txtblock_Addressnumber"
                       Grid.Row="1"
                       Text="Adressnummer: "
                       Width="100"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="10,14,0,71"/>
                <TextBox x:Name="txtbox_Addressnumber"
                     Text="{Binding Path=POD}"
                     HorizontalAlignment="Left"
                     Grid.Row="1"
                     Width="150"
                     Height="20" Margin="110,10,-85,71"/>
                <TextBlock x:Name="txtblock_PhoneNumber"
                       Grid.Row="1"
                       Text="Telefonnummer: "
                       Width="100"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="10,50,0,35"/>
                <TextBox x:Name="txtbox_PhoneNumber"
                     Text="{Binding Path=POD}"
                     HorizontalAlignment="Left"
                     Grid.Row="1"
                     Width="150"
                     Height="20" Margin="110,46,-81,35"/>
                <TextBlock x:Name="txtblock_Email"
                       Grid.Row="1"
                       Text="Email-Adresse: "
                       Width="100"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="10,85,0,0"/>
                <TextBox x:Name="txtbox_Email"
                     Text="{Binding Path=POD}"
                     HorizontalAlignment="Left"
                     Grid.Row="1"
                     Width="150"
                     Height="20" Margin="110,81,-83,0"/>
                <TextBlock x:Name="txtblock_Website"
                       Grid.Row="1"
                       Text="Website: "
                       Width="100"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="278,14,-198,71"/>
                <TextBox x:Name="txtbox_Website"
                     Text="{Binding Path=POD}"
                     HorizontalAlignment="Left"
                     Grid.Row="1"
                     Width="150"
                     Height="20" Margin="378,10,-347,71"/>
                <TextBlock x:Name="txtblock_Password"
                       Grid.Row="1"
                       Text="Passwort: "
                       Width="100"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="278,50,-196,35"/>
                <TextBox x:Name="txtbox_Password"
                     Text="{Binding Path=POD}"
                     HorizontalAlignment="Left"
                     Grid.Row="1"
                     Width="150"
                     Height="20" Margin="378,46,-345,35"/>
                <Button x:Name="button_save"
                        Command="{Binding Path=ConfirmButtonCommand}"
                        Grid.Row="1"
                        Content="Save"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="70" Margin="708,187,-604,-106" Height="20" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
